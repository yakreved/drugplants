<h1>Регионы</h1>
<br>

<table>
  <thead>
    <tr>
      <th>Название региона</th>
      <th>Страна</th>
      <th></th>
      <% if user_signed_in? && current_user.user_type == "admin" %>
        <th></th>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= region.country.name %></td>
        <td><%= link_to 'Подробнее', region %></td>
        <% if user_signed_in? && current_user.user_type == "admin" %>
          <td><%= link_to 'Редактировать', edit_region_path(region) %></td>
          <td><%= link_to 'Уничтожить', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Добавить регион', new_region_path %>
